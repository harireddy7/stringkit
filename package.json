{
  "name": "@harikotha/stringkit",
  "version": "1.0.0",
  "description": "A collection of JavaScript string helper functions",
  "repository": {
    "type": "git",
    "url": "https://github.com/harireddy7/stringkit.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "jest": {
    "preset": "ts-jest"
  },
  "scripts": {
    "zip": "zip -r dist.zip dist/",
    "build": "yarn lint:fix && tsc && yarn zip",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "lint": "eslint .",
    "lint:js": "eslint src/ --fix",
    "lint:fix": "eslint --fix && prettier --write \"src/**/*.{js,ts}\"",
    "pretty": "prettier --write \"src/**/*.{js,ts}\" \"tests/src/*.{js,ts}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:fix"
    ]
  },
  "keywords": [
    "string",
    "utils",
    "kit",
    "javascript",
    "typescript"
  ],
  "author": "harikotha",
  "license": "ISC",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
